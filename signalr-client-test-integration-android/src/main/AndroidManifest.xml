<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="microsoft.aspnet.signalr.client.android.test.integration">

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-sdk/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="microsoft.aspnet.signalr.client.test.integration.android.MainActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="microsoft.aspnet.signalr.client.test.integration.android.SignalRPreferenceActivity"
            android:label="@string/title_activity_signalr_preference" >
        </activity>

    </application>

</manifest>